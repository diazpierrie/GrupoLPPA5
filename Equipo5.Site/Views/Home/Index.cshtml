    <div class="container py-5">

        <div class="row py-5">
            <div class="m-auto text-center">
                <h1 class="product">Ofertas de la Semana!</h1>
                <h6 style="color:red;">Compre en UAI Market, la mejor opción de compra online</h6>
            </div>
            @foreach (var producto in Model)
            {
<div class="col-lg-3 text-center">
    <div class="card border-0 bg-light mb-2">
        <div class="card-body">
            @{ var base64 = Convert.ToBase64String(producto.FotoProducto);
                                var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                                var precioSin = producto.Precio + 50; }
            <img src="@imgSrc" style="width:230px;height:230px" alt="" />
        </div>
    </div>
    <a class="btn btn-danger" href="@Url.Action("ItemCart","Carts", new { idProduct = producto.Id })">Agregar</a>
    <h6><br />@producto.Descripcion</h6>
    <p><small><del>$@precioSin</del><span>  $@producto.Precio</span></small></p>
</div>            }
            <div class="row">
                <div class="col-lg-6 text-center m-auto">
                    <button class="btn1">Click para más Info</button>
                </div>
            </div>
        </div>
    </div>
</section>

