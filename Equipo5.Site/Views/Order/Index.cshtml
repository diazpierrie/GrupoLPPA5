@model IEnumerable<Equipo5.Entities.Models.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Facturas</h2>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Nro Factura</th>
            <th>Cliente</th>
            <th>Fecha Inicio</th>
            <th>Fecha Cierre</th>
            <th>Tipo Factura</th>
            <th>Monto</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: inherit;">
                    @Html.DisplayFor(itemModel => item.Id)
                </td>
                <td style="vertical-align: inherit;">
                    @Html.DisplayFor(itemModel => item.Usuario.Nombre)
                </td>
                <td style="vertical-align: inherit;">
                    @Html.DisplayFor(itemModel => item.FechaInicio)
                </td>
                <td style="vertical-align: inherit;">
                    @Html.DisplayFor(itemModel => item.FechaCierre)
                </td>
                <td style="vertical-align: inherit;">
                    @Html.DisplayFor(itemModel => item.TipoOrder)
                </td>
                <td style="vertical-align: inherit;">
                    @Html.DisplayFor(itemModel => item.DetalleOrder.Sum(df => df.Cantidad * df.Producto.Precio))
                </td>
                <td class="float-right">
                    <a class="btn btn-info" style="font-size: 1rem;" href="@Url.Action("Details", "Order", new { id = item.Id})"><i class="bi bi-eye"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>